{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "name": "@aptosis/aptos-framework-workspace",
  "version": "0.2.6",
  "license": "Apache-2.0",
  "packageManager": "yarn@3.2.2",
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.4",
    "@saberhq/eslint-config": "^2.0.3",
    "@saberhq/tsconfig": "^2.0.3",
    "@types/eslint": "^8.4.6",
    "@types/node": "^18.7.9",
    "@types/prettier": "^2.7.0",
    "@typescript-eslint/utils": "^5.34.0",
    "@yarnpkg/doctor": "^3.1.3",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typedoc": "^0.23.10",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "build": "tsc --build",
    "publish:all": "yarn workspaces foreach --exclude @aptosis/aptos-framework-workspace -vpti --topological-dev npm publish",
    "docs:generate": "typedoc .",
    "bump": "yarn workspaces foreach -t version",
    "test": "echo 'No tests'",
    "lint": "eslint . --cache",
    "lint:ci": "eslint . --max-warnings=0",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{md,js,json,yml,yaml,css,md}": "prettier --write"
  }
}
